@page "/user/update/{ID:int}"
@rendermode InteractiveServer

<h3>Cập Nhật Người dùng</h3>
<EditForm OnValidSubmit="Submit" FormName="CreateProduct" Model="Model">
    <DataAnnotationsValidator />
    <div class="container">
        <div class="row mb-3">
            <div class="col-md-6">
                <label> Tên Người dùng</label>
                <InputText class="form-control" @bind-Value="Model.Username" readonly />
                <ValidationMessage For="() => Model.Username" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label>Vai Trò</label>
                @foreach (var role in AllRoles)
                {
                    <div>
                        <InputCheckbox @bind-Value="role.IsSelected" />
                        @role.RoleName
                    </div>
                }
            </div>
        </div>

        <button class="btn btn-secondary" type="submit">Save</button>
    </div>
</EditForm>